{% extends "QaQuestionBundle::layout.html.twig" %}

{% block content %}
<div>
	<h2>by Tag: {{ tag.name }}</h2>
	<br />
    Questions:
	{% for question in questions %}
	    <li>
	        <a href="{{ path('question_show', { 'id': question.id, 'slug' : question.slug }) }}">{{ question.title }}</a>
	        <br />
	        tag:
	        {% for tag in question.tags %}
	            <a href="{{ path('tag_show', { 'slug' : tag.slug }) }}">{{ tag.name }}</a>{% if not loop.last %}, {% endif %}
	        {% endfor %}
	        &nbsp;
	        by: {{ question.user.name }}
	        &nbsp;
	        views: {{ question.views }}
	    </li>
	{% endfor %}
</div>

{% endblock %}